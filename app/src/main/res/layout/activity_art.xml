<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Activity_Art">

    <ImageView
        android:id="@+id/img_art"
        android:layout_width="411dp"
        android:layout_height="370dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_music"
        app:srcCompat="@drawable/art" />

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="412dp"
        android:layout_height="370dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/img_art"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/music" />

    <Button
        android:id="@+id/btn_music"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        android:fontFamily="@font/twcenmt_reg"
        android:text="MUSIC"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/img_art"
        app:layout_constraintEnd_toEndOf="@+id/img_music"
        app:layout_constraintStart_toStartOf="@+id/img_music"
        app:layout_constraintTop_toTopOf="@+id/img_music" />

    <Button
        android:id="@+id/btn_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        android:fontFamily="@font/twcenmt_reg"
        android:text="ART"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_art"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/img_art"
        app:layout_constraintTop_toTopOf="@+id/img_art"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>