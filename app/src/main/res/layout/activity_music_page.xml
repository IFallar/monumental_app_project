<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:padding="3dp"
    tools:context=".Activity_Music_Page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_music_stop"
            android:layout_width="63dp"
            android:layout_height="54dp"
            android:adjustViewBounds="false"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_music_pause"
            app:layout_constraintTop_toBottomOf="@+id/page_music_composer"
            app:srcCompat="@drawable/ic_stop" />

        <TextView
            android:id="@+id/page_music_title"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/twcenmt_reg"
            android:gravity="bottom|center_horizontal"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/page_music_composer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/twcenmt_med"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Composer"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_music_title" />

        <ImageButton
            android:id="@+id/btn_music_pause"
            android:layout_width="63dp"
            android:layout_height="54dp"
            android:adjustViewBounds="false"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_music_composer"
            app:srcCompat="@drawable/ic_pause" />

        <View
            android:id="@+id/divider13"
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_music_title" />

        <ImageButton
            android:id="@+id/btn_music_play"
            android:layout_width="63dp"
            android:layout_height="54dp"
            android:adjustViewBounds="false"
            android:background="#000000"
            app:layout_constraintEnd_toStartOf="@+id/btn_music_pause"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_music_pause"
            app:srcCompat="@drawable/ic_play" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>